
  <div data-controller="posts" data-action="click->posts#linkToPost" data-link="<%= link %>" class="cursor-pointer py-3 justify-center max-w-sm w-full lg:max-w-full lg:flex">
    <div class="border border-gray-400 lg:border-l lg:border-t lg:border-gray-400 h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center lg:overflow-hidden" style="background-image: url('<%= image %>')" title="<%= image_alt %>">
    </div>
    <div class="w-full max-w-sm border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
     <div class="mb-8">
        <div class="text-gray-900 font-bold text-xl mb-2"><%= title %></div>
        <p class="text-gray-700 text-base"><%= description %></p>
      </div>
      <div class="flex items-center">
        <img class="w-10 h-10 rounded-full mr-4" src="<%= site.metadata.hero %>" alt="Avatar of Joseph Hargrove">
        <div class="text-sm">
          <p class="text-gray-900 leading-none"><%= author %></p>
          <p class="text-gray-600"><%= date.strftime('%B, %d %Y') %></p>
        </div>
     </div>
   </div>
  </div>
